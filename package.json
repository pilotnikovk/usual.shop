{
  "name": "ussil-cms",
  "version": "1.0.0",
  "description": "USSIL Industrial Equipment CMS - Railway Deployment",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.tsx",
    "preview": "npm run build && npm start",
    "db:migrate": "psql $DATABASE_URL -f migrations/0001_postgresql_schema.sql",
    "db:seed": "psql $DATABASE_URL -f migrations/seed_postgresql.sql",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:migrate && npm run db:seed",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "hono": "^4.11.4",
    "@hono/node-server": "^1.12.0",
    "postgres": "^3.4.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "tsx": "^4.7.0"
  }
}
